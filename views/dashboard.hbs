<h6>Dashboard</h6>
<h3>Welcome {{ name }} </h3>
<p>Here are your tasks</p>
{{#if tasks}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each tasks}}
                <tr>
                    <td><a href="/tasks/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><samp class="dash-status">{{status}}</samp></td>
                    <td>
                        <a href="/tasks/edit/{{_id}}" class="btn btn-float">
                        <i class="fas fa-edit"></i>
                        </a>

                        <form action="/tasks/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn red">
                            <i class="fas fa-trash"></i>
                        </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have not created any tasks</p>
{{/if}}