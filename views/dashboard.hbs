<h6>Dashboard</h6>
<h3>Welcome {{ name }} </h3>
<p>Here are your tasks</p>
{{#if tasks}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each tasks}}
                <tr>
                    <td><a href="/tasks/{{_id}}"></a>{{title}}</td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><samp class="dash-status">{{status}}</samp></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have not created any tasks</p>
{{/if}}