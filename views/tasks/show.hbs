<div class="row">
    <div class="col s12 m8">
        <h3>{{task.title}}
            <small>{{{editIcon task.user user task._id false}}}</small>
        </h3>
        <div class="card task">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{task.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{task.user.displayName}}</span>
                <img src="{{task.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/tasks/user/{{task.user._id}}">More From {{task.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>