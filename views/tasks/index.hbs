<h1>Tasks</h1>
<div class="row">
    {{#each tasks}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{!-- todo: editIkon --}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{body}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/tasks/user/{{user._id}}">{{user.displayName}}
                        </a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/tasks/{{_id}}" class="btn gray">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No tasks to display</p>
    {{/each}}
</div>